<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/Title"

        android:textSize="80dp"
        android:layout_marginTop="50dp"
        />

    <TableRow

        android:layout_width="fill_parent"
        android:layout_height="250dp">

        <Button
            android:id="@+id/semester1page"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/calendar"
            android:onClick="onClick"


            />

        <Button
            android:id="@+id/semester2page"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/Title"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/semester1page"
            android:background="@drawable/calendar2"
            android:onClick="onClick"

            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="250dp">

        <Button
            android:id="@+id/notepage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/notebook"
            android:onClick="onClick" />

        <Button
            android:id="@+id/alarmpage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/semester2page"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/notepage"

            android:background="@drawable/alarmclock"
            android:onClick="onClick" />
    </TableRow>

</LinearLayout>